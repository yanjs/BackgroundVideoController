{
  "manifest_version": 3,
  "name": "Picture in Picture Controller",
  "description": "In the background, control the video with keyboard shortcuts: toggle picture-in-picture, play/pause, skip forward, skip backward",
  "version": "1.0",
  "action": {
    "default_icon": "icon.png",
    "default_title": "click to switch PiP"
  },
  "permissions": [
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "commands": {
    "skipForward": {
      "suggested_key": "Alt+D",
      "description": "Skip Forward",
      "global": true
    },
    "skipBack": {
      "suggested_key": "Alt+A",
      "description": "Skip Back",
      "global": true
    },
    "pause": {
      "suggested_key": "Alt+S",
      "description": "Pause / Play",
      "global": true
    },
    "_execute_action": {
      "suggested_key": "Alt+Q",
      "description": "Toggle Picture in Picture",
      "global": true
    }
  },
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },

  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}